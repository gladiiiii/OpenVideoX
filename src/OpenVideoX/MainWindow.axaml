<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        x:Class="OpenVideoX.MainWindow"
        Title="OpenVideoX" Width="800" Height="450">
  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
      <Button Name="OpenButton" Content="Open" Width="80" Margin="0,0,5,0"/>
      <Button Name="PlayButton" Content="Play" Width="80"/>
    </StackPanel>
    <vlc:VideoView Name="VideoView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
  </DockPanel>
</Window>
